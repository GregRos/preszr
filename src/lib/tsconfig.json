{
    "extends": "../tsconfig.base.json",
    "compilerOptions": {
        "target": "es6",
        "sourceMap": true,
        "declarationMap": true,
        "lib": ["es6"],
        "noImplicitAny": true,
        "outDir": "../../dist/lib",
        "allowJs": true,
        "types": ["base64-js", "@types/node"],
        "strict": true,
        "resolveJsonModule": true
    },
    "include": ["**/*.ts", "**/*.js", "../../package.json"]
}
