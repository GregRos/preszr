{
  "name": "szr",
  "version": "1.0.0",
  "description": "A lightweight library for encoding complex objects so they can be serialized.",
  "main": "index.js",
  "repository": "https://www.github.com/GregRos/szr",
  "author": "GregRos",
  "license": "MIT",
  "keywords": [
    "serialize",
    "deserialize",
    "serialization"
  ],
  "scripts": {
    "clean": "shx rm -rf dist/",
    "build": "tsc",
    "build:clean": "npm-run-all clean build",
    "test": "nyc ava",
    "test:no-cover": "node node_modules/ava/cli.js",
    "docs": "node dist/generate-docs/run.js",
    "lint": "tslint -p .",
    "lint:fix": "tslint -p . --fix",
    "package:build": "npm-run-all lint build:clean test && node dist/publish.js",
    "package:publish": "yarn run package:build && cd .publish && yarn publish"
  },
  "dependencies": {
    "base64-js": "^1.5.1"
  },
  "devDependencies": {
    "@types/lodash": "^4.14.170",
    "@types/shelljs": "^0.8.6",
    "ava": "^3.15.0",
    "lodash": "^4.17.21",
    "npm-run-all": "^4.1.5",
    "nyc": "^15.0.0",
    "retarget-sourcemaps-after-move": "^0.2.0",
    "shelljs": "^0.8.3",
    "shx": "^0.3.3",
    "source-map-support": "^0.5.16",
    "ts-node": "^10.0.0",
    "tslint": "^6.1.3",
    "tslint-config-gregros": "^1.6.0",
    "typescript": "^4.3.4",
    "yamprint": "^0.8.4"
  },
  "nyc": {
    "produce-source-map": true,
    "extension": [
      ".ts"
    ],
    "include": [
      "src/lib/**/*.ts"
    ],
    "all": true,
    "reporter": [
      "lcov",
      "text-summary"
    ],
    "sourceMap": true
  },
  "ava": {
    "verbose": true,
    "extensions": [
      "ts"
    ],
    "files": [
      "src/test/*.spec.ts"
    ],
    "require": [
      "ts-node/register",
      "./src/test/setup.ts"
    ],
    "timeout": "30s"
  }
}
