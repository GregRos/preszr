{
  "name": "szr",
  "version": "0.1.0",
  "description": "Library for serialization",
  "main": "index.js",
  "repository": "https://www.github.com/GregRos/transcurse",
  "author": "GregRos",
  "license": "MIT",
  "scripts": {
    "clean": "shx rm -rf dist/",
    "build": "tsc",
    "build:clean": "npm-run-all clean build",
    "test": "nyc ava",
    "test:no-cover": "node node_modules/ava/cli.js",
    "docs": "node dist/generate-docs/run.js",
    "lint": "tslint -p .",
    "lint:fix": "tslint -p . --fix",
    "package:build": "npm-run-all lint build:clean test && node dist/publish.js",
    "package:publish": "yarn run package:build && cd .publish && yarn publish"
  },
  "dependencies": {},
  "devDependencies": {
    "@types/lodash": "^4.14.170",
    "@types/node": "12.12.8",
    "@types/shelljs": "^0.8.6",
    "ava": "^2.4.0",
    "lodash": "^4.17.21",
    "npm-run-all": "^4.1.5",
    "nyc": "^15.0.0",
    "retarget-sourcemaps-after-move": "^0.2.0",
    "shelljs": "^0.8.3",
    "shx": "^0.3.3",
    "source-map-support": "^0.5.16",
    "tslint": "^6.1.3",
    "tslint-config-gregros": "^1.6.0",
    "typescript": "^4.3.4",
    "yamprint": "^0.8.4"
  },
  "nyc": {
    "produce-source-map": true,
    "include": [
      "dist/lib/**/*.js",
      "src/lib/**/*.ts"
    ],
    "reporter": [
      "lcov",
      "text-summary"
    ],
    "sourceMap": true
  },
  "ava": {
    "verbose": true,
    "files": [
      "dist/test/**/*.spec.js"
    ]
  }
}
