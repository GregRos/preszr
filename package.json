{
  "name": "preszr",
  "version": "1.0.0",
  "description": "A lightweight library for encoding complex objects so they can be serialized.",
  "main": "dist/lib/index.js",
  "repository": "https://www.github.com/GregRos/preszr",
  "author": "GregRos",
  "license": "MIT",
  "keywords": [
    "object-graph",
    "graph",
    "serialize",
    "deserialize",
    "serialization",
    "json.stringify"
  ],
  "scripts": {
    "clean": "shx rm -rf dist/",
    "build": "tsc",
    "build+clean": "run-s clean build",
    "prettier:fix": "prettier -w 'src/**/*.ts'",
    "prettier": "prettier --check 'src/**/*.ts'",
    "eslint": "eslint 'src/**/*.ts'",
    "eslint:fix": "eslint --fix 'src/**/*.ts'",
    "lint:check": "run-s -c prettier eslint",
    "lint:fix": "run-s prettier:fix eslint:fix",
    "test": "nyc ava",
    "test:no-cover": "node node_modules/ava/cli.js",
    "docs": "node dist/generate-docs/run.js"
  },
  "dependencies": {
    "base64-js": "^1.5.1"
  },
  "devDependencies": {
    "@gregros/eslint-config": "^0.2.0",
    "@types/lodash": "^4.14.170",
    "@types/node": "^17.0.18",
    "@types/shelljs": "^0.8.6",
    "@typescript-eslint/eslint-plugin": "^5.11.0",
    "@typescript-eslint/parser": "^5.11.0",
    "ava": "^3.15.0",
    "eslint": "^8.9.0",
    "lodash": "^4.17.21",
    "npm-run-all": "^4.1.5",
    "nyc": "^15.0.0",
    "prettier": "^2.5.1",
    "retarget-sourcemaps-after-move": "^0.2.0",
    "shelljs": "^0.8.3",
    "shx": "^0.3.3",
    "source-map-support": "^0.5.16",
    "ts-node": "^10.0.0",
    "typescript": "^4.3.4",
    "yamprint": "^0.8.4"
  },
  "nyc": {
    "produce-source-map": true,
    "extension": [
      ".ts"
    ],
    "include": [
      "src/lib/**/*.ts"
    ],
    "all": true,
    "reporter": [
      "lcov",
      "text-summary"
    ],
    "sourceMap": true
  },
  "ava": {
    "verbose": true,
    "extensions": [
      "ts"
    ],
    "files": [
      "src/test/*.spec.ts"
    ],
    "require": [
      "ts-node/register",
      "./src/test/setup.ts"
    ],
    "timeout": "30s"
  }
}
