{
    "name": "preszr",
    "version": "2.2.0",
    "description": "A lightweight library for encoding complex objects so they can be serialized.",
    "main": "dist/lib/index.js",
    "typings": "dist/lib/index",
    "repository": {
        "type": "git",
        "url": "https://www.github.com/GregRos/preszr"
    },
    "author": "GregRos",
    "license": "MIT",
    "keywords": [
        "object-graph",
        "graph",
        "serialize",
        "deserialize",
        "serialization",
        "json.stringify"
    ],
    "scripts": {
        "clean": "shx rm -rf dist/",
        "build": "node tools/create-version-stub.cjs && tsc -b tsconfig.all.json",
        "build:clean": "run-s clean build",
        "prettier:fix": "prettier -w src/**/*.ts",
        "prettier": "prettier --check 'src/**/*.ts'",
        "eslint": "eslint 'src/**/*.ts'",
        "eslint:fix": "eslint --fix src/**/*.ts",
        "lint:check": "run-s -c prettier eslint",
        "lint:fix": "run-s prettier:fix eslint:fix",
        "test": "nyc ava",
        "test:no-cover": "ava",
        "watch": "node tools/create-version-stub.cjs && tsc -b tsconfig.all.json -w",
        "docs": "node dist/generate-docs/run.js",
        "tidy": "yarn install && run-s build:clean lint:fix test",
        "prepublishOnly": "node tools/packaging.cjs"
    },
    "dependencies": {
        "base64-js": "^1.5.1",
        "doddle": "^3.2.0"
    },
    "devDependencies": {
        "@ava/typescript": "^3.0.1",
        "@gregros/eslint-config": "^0.6.0",
        "@types/lodash": "^4.14.185",
        "@types/node": "^17.0.45",
        "@typescript-eslint/eslint-plugin": "7.6.0",
        "@typescript-eslint/parser": "7.6.0",
        "add": "^2.0.6",
        "ava": "^4.3.3",
        "eslint": "^8",
        "lodash": "^4.17.21",
        "npm-run-all": "^4.1.5",
        "nyc": "^15.0.0",
        "prettier": "^3",
        "prettier-plugin-jsdoc": "^1.3.0",
        "prettier-plugin-organize-imports": "^4.0.0",
        "prettier-plugin-packagejson": "^2.5.2",
        "shelljs": "^0.8.5",
        "shx": "^0.3.3",
        "tsconfig-paths": "^3.14.1",
        "typescript": "^5.5.4",
        "yarn": "^1.22.22"
    },
    "nyc": {
        "produce-source-map": true,
        "extension": [
            ".ts",
            ".js"
        ],
        "reporter": [
            "lcov",
            "text",
            "text-summary",
            "html"
        ],
        "include": [
            "src/lib/**/*.ts",
            "dist/lib/**/*.js"
        ],
        "all": true,
        "sourceMap": true
    },
    "ava": {
        "workerThreads": false,
        "typescript": {
            "rewritePaths": {
                "src/": "dist/"
            },
            "compile": false
        },
        "extensions": [],
        "files": [
            "src/test/tests/**/*.ts"
        ],
        "require": [
            "./dist/test/setup.js"
        ],
        "timeout": "30s"
    },
    "packageManager": "yarn@4.4.1"
}
