{
  "name": "preszr",
  "version": "1.0.0",
  "description": "A lightweight library for encoding complex objects so they can be serialized.",
  "main": "dist/lib/index.js",
  "repository": {
    "type": "git",
    "url": "https://www.github.com/GregRos/preszr"
  },
  "author": "GregRos",
  "license": "MIT",
  "keywords": [
    "object-graph",
    "graph",
    "serialize",
    "deserialize",
    "serialization",
    "json.stringify"
  ],
  "scripts": {
    "clean": "shx rm -rf dist/",
    "build": "tsc -b tsconfig.all.json",
    "build+clean": "run-s clean build",
    "prettier:fix": "prettier -w 'src/**/*.ts'",
    "prettier": "prettier --check 'src/**/*.ts'",
    "eslint": "eslint 'src/**/*.ts'",
    "eslint:fix": "eslint --fix 'src/**/*.ts'",
    "lint:check": "run-s -c prettier eslint",
    "lint:fix": "run-s prettier:fix eslint:fix",
    "test": "nyc ava",
    "test:no-cover": "ava",
    "docs": "node dist/generate-docs/run.js"
  },
  "dependencies": {
    "base64-js": "^1.5.1"
  },
  "devDependencies": {
    "@ava/typescript": "^3.0.1",
    "@gregros/eslint-config": "^0.3.0",
    "@types/lodash": "^4.14.170",
    "@types/node": "^17.0.22",
    "@typescript-eslint/eslint-plugin": "^5.10.1",
    "@typescript-eslint/parser": "^5.10.1",
    "ava": "^4.0.1",
    "eslint": "^8.8.0",
    "lodash": "^4.17.21",
    "npm-run-all": "^4.1.5",
    "nyc": "^15.0.0",
    "prettier": "^2.5.1",
    "shx": "^0.3.3",
    "source-map-support": "^0.5.21",
    "tsconfig-paths": "^3.12.0",
    "typescript": "^4.3.4"
  },
  "nyc": {
    "produce-source-map": true,
    "extension": [
      ".ts"
    ],
    "include": [
      "src/lib/**/*.ts"
    ],
    "all": true,
    "reporter": [
      "lcov",
      "text-summary"
    ],
    "sourceMap": true
  },
  "ava": {
    "workerThreads": false,
    "typescript": {
      "rewritePaths": {
        "src/": "dist/"
      },
      "compile": false
    },
    "extensions": [],
    "files": [
      "src/test/tests/**/*.ts"
    ],
    "require": [
      "./dist/test/setup.js"
    ],
    "timeout": "30s"
  }
}
